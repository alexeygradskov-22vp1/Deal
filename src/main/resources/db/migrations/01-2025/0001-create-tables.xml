<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="0001" author="ALEXEY GRADSKOV">
        <createTable tableName="client" ifNotExists="true">
            <column name="client_id" type="uuid" generationType="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="varchar"/>
            <column name="first_name" type="varchar"/>
            <column name="middle_name" type="varchar"/>
            <column name="birthdate" type="date"/>
            <column name="email" type="varchar"/>
            <column name="gender" type="varchar"/>
            <column name="marital_status" type="varchar"/>
            <column name="dependent_amount" type="int8"/>
            <column name="passport" type="jsonb"/>
            <column name="employment" type="jsonb"/>
            <column name="account_number" type="varchar"/>
        </createTable>

        <createTable tableName="credit" ifNotExists="true">
            <column name="credit_id" type="uuid" generationType="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="numeric"/>
            <column name="term" type="int8"/>
            <column name="monthly_payment" type="numeric"/>
            <column name="rate" type="numeric"/>
            <column name="psk" type="numeric"/>
            <column name="payment_schedule" type="jsonb"/>
            <column name="insurance_enabled" type="bool"/>
            <column name="salary_client" type="bool"/>
            <column name="credit_status" type="varchar"/>
        </createTable>

        <createTable tableName="statement" ifNotExists="true">
            <column name="statement_id" type="uuid" generationType="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="uuid">
                <constraints foreignKeyName="statement_client_fk" referencedTableName="client" referencedColumnNames="client_id"/>
            </column>
            <column name="credit_id" type="uuid">
                <constraints foreignKeyName="statement_credit_fk" referencedTableName="credit" referencedColumnNames="credit_id"/>
            </column>
            <column name="status" type="varchar"/>
            <column name="creation_date" type="timestamp"/>
            <column name="applied_offer" type="jsonb"/>
            <column name="sign_date" type="timestamp"/>
            <column name="ses_code" type="varchar"/>
            <column name="status_history" type="jsonb"/>
        </createTable>
    </changeSet>
</databaseChangeLog>